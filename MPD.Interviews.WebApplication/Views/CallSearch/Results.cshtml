<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        User Id
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Label
                    </th>
                    <th>
                        Duration
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.SearchResults)
                {
                    <tr>
                        <td>
                            @result.UserId
                        </td>
                        <td>
                            @result.Date.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td>
                            @result.PhoneNumber
                        </td>
                        <td>
                            @result.CustomLabel
                        </td>
                        <td>
                            @result.DurationInMinutes.ToString("####.##") (mins)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>